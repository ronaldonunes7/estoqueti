{
  "name": "sistema-inventario-ti",
  "version": "1.0.0",
  "description": "Sistema de Invent√°rio e Controle de Ativos de TI",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "prod:start": "pm2 start ecosystem.config.js --env production",
    "prod:stop": "pm2 stop all",
    "prod:restart": "pm2 restart all",
    "prod:logs": "pm2 logs",
    "prod:status": "pm2 status",
    "prod:monitor": "pm2 monit",
    "backup": "powershell -ExecutionPolicy Bypass -File scripts/maintenance.ps1 -Action backup",
    "health": "powershell -ExecutionPolicy Bypass -File scripts/health-check.ps1",
    "maintenance": "powershell -ExecutionPolicy Bypass -File scripts/maintenance.ps1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "sqlite3": "^5.1.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
