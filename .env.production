# Configurações de Produção - Sistema de Inventário TI
# IMPORTANTE: Altere os valores padrão antes de usar em produção!

# Ambiente
NODE_ENV=production

# Servidor
PORT=3001
HOST=0.0.0.0

# Segurança JWT - ALTERE ESTA CHAVE!
JWT_SECRET=sua-chave-secreta-super-segura-producao-inventario-ti-2026-ALTERE-ESTA-CHAVE

# Configurações do Frontend (se necessário)
VITE_API_URL=http://localhost:3001/api

# Configurações de CORS (adicione os domínios permitidos)
CORS_ORIGIN=http://localhost:5173,http://seu-dominio.com

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logs
LOG_LEVEL=info
LOG_DIR=C:\\logs\\inventario-ti

# Configurações de Backup (opcional)
BACKUP_DIR=C:\\backup\\inventario-ti
BACKUP_RETENTION_DAYS=30

# Configurações de E-mail (para futuras funcionalidades)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=seu-email@empresa.com
# SMTP_PASS=sua-senha-app

# Configurações de Monitoramento (opcional)
# MONITORING_ENABLED=true
# HEALTH_CHECK_INTERVAL=30000

# Configurações de Performance
MAX_MEMORY_RESTART=1024
CLUSTER_INSTANCES=max

# Configurações de Segurança Avançada
# HELMET_CSP_ENABLED=true
# HELMET_HSTS_ENABLED=true